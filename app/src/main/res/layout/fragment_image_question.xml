<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    android:weightSum="12"
    tools:context=".NavigationItem.ImageQuestionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:padding="10dp"
        android:weightSum="12">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="4"
            android:autoSizeMaxTextSize="30sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeTextType="uniform"
            android:text="Select Image same as the image Below."
            android:textColor="#000" />

        <TextView
            android:id="@+id/question_number_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1.5"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="7sp"
            android:autoSizeTextType="uniform"
            android:gravity="end"
            android:text="Question Number : 1" />

        <TextView
            android:id="@+id/marks_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1.5"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="7sp"
            android:autoSizeTextType="uniform"
            android:gravity="end"
            android:text="Marks : 1" />

        <ImageView
            android:id="@+id/target"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="5"
            android:src="@drawable/tired256x256" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="20dp"
        android:weightSum="2">

        <ImageView
            android:id="@+id/imageOne"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/answer_item_backgournd"
            android:padding="10dp"
            android:src="@drawable/angry256x256" />

        <ImageView
            android:id="@+id/imageTwo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_weight="1"
            android:background="@drawable/answer_item_backgournd"
            android:padding="10dp"
            android:src="@drawable/happy256x256" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="20dp"
        android:weightSum="2">

        <ImageView
            android:id="@+id/imageThree"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/answer_item_backgournd"
            android:padding="10dp"
            android:src="@drawable/surprised256x256" />

        <ImageView
            android:id="@+id/imageFour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_weight="1"
            android:background="@drawable/answer_item_backgournd"
            android:padding="10dp"
            android:src="@drawable/tired256x256" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/submit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit" />

    </LinearLayout>

</LinearLayout>